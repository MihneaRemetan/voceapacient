{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "moduleResolution": "node",

    "types": ["node"],

    "lib": ["ES2020"],

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
